<div class="container text-center">
<img src="/assets/img/burger.png">

<h2>Eat-Da-Burger!</h2>
</div>
<ul>
	{{#each burgers}}
	  {{#unless this.devoured}}
	  	<li>
	  		{{this.id}}. {{this.burger_name}}
	  		<form action="burgers/updateOne/{{this.id}}?_method=PUT" method="POST">
	  			<input type="hidden" name="devoured" value="true">
          		<button type="submit">Devour it!</button>
	  		</form>
	  	 </li>
    {{/unless}}
  {{/each}}
</ul>

<ul>
  {{#each burgers}}
    {{#if this.devoured}}
      <li>
        {{this.id}}. {{this.burger_name}}

        <form action="burgers/updateOne/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="false">
        </form>
      </li>
    {{/if}}
  {{/each}}
</ul>

<div class="container text-center">
<form class="create-update-form" action="/burgers/insertOne" method="POST">

  <div class="form-group">
    <label for="burger"></label>
    <input type="textarea" id="burger" name="name">
  </div>

  <button class="btn btn-primary" type="submit">Submit</button>
  <p>Enter a burger you want to eat then click the "Submit" button.
</form>
</div>